<h3> Toutes les opérations pour <%= @company.name %></h3>

<ul>
  <% @operations.each do |operation| %>
    <% unless operation.category == 'initialize-captable' %>
      <li>Catégorie : <%= operation.category %> || Montant visé : <%= money_without_cents operation.target_amount %> euros || Date de clôture envisagée : <%= operation.expected_closing_date %> || Status : <%= operation.status %> || <%= link_to 'Détails', operation_path(operation.id) %> </li>
    <% end %>
  <% end %>
</ul>



<%= link_to 'Nouvelle opération', new_company_operation_path(@company)  %>
