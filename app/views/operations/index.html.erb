<h2> Toutes les opérations pour <%= @company.name %></h2>

<ul>
  <% @operations.each do |operation| %>
    <% unless operation.category == 'initialize-captable' %>
      <li>Catégorie : <%= operation.category %> || Montant espéré : <%= money_without_cents operation.target_amount_cents %> euros || Date de clôture envisagée : <%= operation.expected_closing_date %> || <%= link_to 'Détails', operation_path(operation.id) %> </li>
    <% end %>
  <% end %>
</ul>



<%= link_to 'Nouvelle opération', new_company_operation_path(@company)  %>
