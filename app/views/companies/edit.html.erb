<div class="container form-edit-company">
  <div class="row">
    <div class="col-xs-6 col-sm-8 col-sm-offset-2">

      <%= simple_form_for @company, method: :patch do |f| %>
        <%= f.input :name, label: 'Nom'%>
        <%= f.input :address, label: 'Adresse'%>
        <%= f.input :legal_form, label: 'Forme sociale' %>
        <%= f.input :creation_date, as: :string, label: "Date d'immatriculation", as: :string, input_html: { class: "datepicker", style: "background-color: white;"} %>
        <%= f.input :share_nominal_value, as: :string, label: "Valeur nominale de l'action"%>
        <%= f.input :logo_url, as: :file, label: "Logo" %>
        <%= f.input :logo_url_cache, as: :hidden %>
        <%= f.submit 'Confirmer', class: 'btn btn-form-action' %>
      <% end %>

    </div>
  </div>
</div>
<br><br>
<div class="container">
  <div class="row text-align-center">
    <div class="col-xs-6 col-sm-8 col-sm-offset-2">
      <%= link_to new_company_captable_path(@company.id) do %>
        <button type="button" class="btn btn-transparent-small" >Editer le nombre d'actions</button>
      <% end %>
    </div>
  </div>
</div>
